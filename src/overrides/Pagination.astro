---
const { pagination } = Astro.locals.starlightRoute
const { prev, next } = pagination
---

<div class="pagination-links print:hidden">
  {
    prev && (
      <a class="pagination-card prev" href={prev.href} rel="prev">
        <div class="pagination-content">
          <div class="pagination-label">上一页</div>
          <div class="pagination-title">{prev.label}</div>
        </div>
      </a>
    )
  }
  {
    next && (
      <a class="pagination-card next" href={next.href} rel="next">
        <div class="pagination-content">
          <div class="pagination-label">下一页</div>
          <div class="pagination-title">{next.label}</div>
        </div>
      </a>
    )
  }
</div>

<style>
  .pagination-links {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    gap: 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .pagination-card {
    flex: 1;
    width: 100%;
    background-color: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease-in-out;
    display: block;
  }

  .pagination-card:hover {
    border-color: #000;
  }

  .pagination-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .pagination-label {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 500;
  }

  .pagination-title {
    font-size: 0.875rem;
    color: #000;
    font-weight: 600;
    line-height: 1.25;
  }

  .prev .pagination-content {
    text-align: left;
  }

  .next .pagination-content {
    text-align: right;
  }

  /* 当只有一个按钮时的样式 */
  .pagination-links:has(.prev:only-child) .prev,
  .pagination-links:has(.next:only-child) .next {
    max-width: none;
  }

  /* 响应式设计 */
  @media (max-width: 640px) {
    .pagination-links {
      flex-direction: column;
      gap: 0.75rem;
    }

    .pagination-card {
      max-width: none;
    }

    .next .pagination-content {
      text-align: left;
    }
  }
</style>
